<div class="center-block">
  <div class="page-header">
    <h4><%= @doodle.title %></h4>
  </div>

  <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <strong>오류 :</strong> <%= flash[:alert] %>
      </div>
  <% end %>

  <div class="form-horizontal">
    <div class="form-group form-group-lg">
      <div class="col-sm-10">
        <p><%= @doodle.contents.html_safe %></p>
      </div>
    </div>
    <div class="form-group form-group-lg">
      <div class="col-sm-10">
        <p>
        <% @doodle.tags.each do |tag| %>
            <%= tag %>&nbsp;
        <% end %>
        </p>
      </div>
    </div>
  </div>
</div>