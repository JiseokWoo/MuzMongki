<% @owner = Mongki.find_by(_id: @doodle.owner) %>
<div class="center-block" style="width: 700px;">
  <div class="page-header row">
    <div class="col-md-8">
      <h4><%= @doodle.title %></h4>
    </div>
    <div class="col-md-1">
      <% if not @owner.avatar.url.nil? %>
          <%= image_tag @owner.avatar.url %>
      <% else %>
          <%= image_tag 'logo_40x40.png' %>
      <% end %>
    </div>
    <div class="col-md-1">
      <h6><%= @owner.name %></h6>
    </div>
  </div>

  <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <strong>오류 :</strong> <%= flash[:alert] %>
      </div>
  <% end %>

  <% if flash[:success] %>
      <div class="alert alert-success" role="alert">
        <strong>확인 :</strong> <%= flash[:success] %>
      </div>
  <% end %>

  <% if not @doodle.video.url.nil? %>
        <%= video_tag [@doodle.video.url], :controls => true, class: "center-block" %>
  <% end %>
  <br>
  <div class="form-horizontal">
    <div class="form-group form-group-lg">
      <div class="col-sm-10">
        <p><%= @doodle.contents.html_safe %></p>
      </div>
    </div>
    <div class="form-group form-group-lg">
      <div class="col-sm-10">
        <p>
        <% @doodle.tags.each do |tag| %>
            <%= tag %>&nbsp;
        <% end %>
        </p>
      </div>
    </div>
    <% if logged_in? && @doodle.owner.to_s == session[:id]%>
        <ul class="nav navbar-nav navbar-right">
          <li><%= button_to "수정", edit_doodle_path(@doodle._id), method: "get", class: "btn btn-default navbar-btn" %></li>
          <li>&nbsp;</li>
          <li><%= button_tag "삭제", data: {toggle: "modal", target: "#destroyDoodle"}, class: "btn btn-danger navbar-btn" %></li>
        </ul>
    <% end %>

  </div>
</div>

<div class="modal fade" id="destroyDoodle" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">글 삭제</h4>
      </div>
      <div class="modal-body">
        정말 삭제하시겠습니까?
      </div>
      <div class="modal-footer">
        <%= button_to "삭제", doodle_path(@doodle._id), method: "delete", class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>