<div class="row center-block" style="width: 700px;">
  <div class="page-header">
    <h1>Login</h1>
  </div>

  <% if logged_in? %>
  
  <% end %>

  <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <strong>ERROR :</strong> <%= flash[:alert] %>
      </div>
  <% end %>

  <div class="form-horizontal">
    <%= form_for :login, url: login_path do |f| %>
        <div class="form-group form-group-lg">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", placeholder: "muzmongki@example.com" %>
          </div>
        </div>
        <div class="form-group form-group-lg">
          <%= f.label :password, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <%= f.submit "Login", class: "btn btn-primary center-block" %>
    <% end %>
  </div>
  <p>New user for <%= link_to "Sign up!", signup_path %></p>
</div>