<div class="center-block" style="width: 700px;">
  <div class="page-header">
    <h1>회원정보 수정</h1>
  </div>

  <% if flash[:alert] %>
      <div class="alert alert-danger" role="alert">
        <strong>오류 :</strong> <%= flash[:alert] %>
      </div>
  <% end %>

  <div class="form-horizontal">
    <%= form_for @mongki, url: "/auth", method: "get" do |f| %>
        <div class="form-group form-group-lg">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control", placeholder: "muzmongki@example.com", readonly: true %>
          </div>
        </div>
        <div class="form-group form-group-lg">
          <%= f.label :password, "New Password", class: "col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
        <div class="form-group form-group-lg">
          <%= f.submit "확인", class: "btn btn-primary center-block" %>
        </div>
    <% end %>
  </div>
</div>