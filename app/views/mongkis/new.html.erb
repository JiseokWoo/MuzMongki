<h1>Sign up</h1>

<% if flash[:alert] %>
    <div class="has-error">ERROR : <%= flash[:alert] %></div>
<% end %>

<div class="form-horizontal">
  <%= form_for @mongki do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: "form-control", placeholder: "muzmongki@example.com" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :name, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control", placeholder: "muzmongki" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confrim", class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      </div>
      <div>
        <%= f.submit "Sign up", class: "btn btn-default" %>
      </div>
  <% end %>
</div>